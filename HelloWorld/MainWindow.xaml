<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="My Main Window" Height="500" Width="600" Background="Pink">

    <StackPanel> 

        <TextBlock>Enter Name:</TextBlock>
        <TextBox x:Name="uxName" TextChanged="txtChangeuxName" ></TextBox>
        <TextBlock>Enter Password:</TextBlock>
        <TextBox x:Name="uxPassword" TextChanged="txtChangeuxPassword"></TextBox>
        <Button x:Name="uxSubmit" IsEnabled ="False"  Click="uxSubmit_Click" Background="#FFA8E49E">Submit</Button>
        
        <Button>
            <StackPanel Orientation="Horizontal" Height="100">
                <Image Source="images/ic_thumb_up_black_24dp_2x.png" 
                       Margin="10,20,30,40" VerticalAlignment="Center"
                       Height="50"/>
                <TextBlock  VerticalAlignment = "Center" Text="Thumbs Up" />
            </StackPanel>
        </Button>



    </StackPanel>
</Window>
